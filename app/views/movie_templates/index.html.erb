<h1>
  List of all movies
</h1>

<hr>

<form action="/insert_movie" method="post">
  <div>
    <label for="title">Title</label>
    <input type="text" id="title" name="query_title">
  </div>

  <div>
    <label for="year">Year</label>
    <input type="text" id="year" name="query_year">
  </div>

  <div>
    <label for="duration">Duration</label>
    <input type="text" id="duration" name="query_duration">
  </div>

  <div>
    <label for="description">Description</label>
    <textarea rows="3" id="description" name="query_description"></textarea>
  </div>

  <div>
    <label for="image">Image</label>
    <input type="text" id="image" name="query_image">
  </div>

  <div>
    <label for="director_id">Director ID</label>
    <input type="text" id="director_id" name="query_director_id">
  </div>

  <button>Create movie</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Title
    </th>

    <th>
      Year
    </th>

    <th>
      Director
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_movies.each do |a_movie| %>
  <tr>
    <td>
      <%= a_movie.id %>
    </td>

    <td>
      <img src="<%= a_movie.image %>" style="width:250px;">
    </td>

    <td>
      <%= a_movie.title %>
    </td>

    <td>
      <%= a_movie.year %>
    </td>

    <td>
      <% matching_directors = Director.where({ :id => a_movie.director_id }) %>
      
      <% the_director = matching_directors.at(0) %>

      <% if the_director == nil %>
        Uh oh! We weren't able to find a director for this movie.
      <% else %>
        <%= the_director.name %>
      <% end %>
    </td>

    <td>
      <a href="/movies/<%= a_movie.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
